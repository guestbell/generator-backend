{
  "name": "@guestbell/generator-backend",
  "version": "1.0.0",
  "description": "Scaffold out a guestbell backend component",
  "license": "BSD-2-Clause",
  "repository": "guestbell/generator-backend",
  "author": "Peter Kottas",
  "main": "app/index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "eslint . && mocha --reporter spec --timeout 3000"
  },
  "files": [
    "app"
  ],
  "keywords": [
    "yeoman-generator",
    "guestbell"
  ],
  "dependencies": {
    "command-exists": "^1.2.8",
    "generator-jasmine": "^2.0.1",
    "generator-mocha": "^2.0.3",
    "mkdirp": "^0.5.1",
    "yeoman-generator": "^4.0.1",
    "yosay": "^2.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.1.4",
    "prettier": "^1.17.1",
    "yeoman-assert": "^3.1.1",
    "yeoman-test": "^2.0.0"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test",
      "pre-publish": "yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
